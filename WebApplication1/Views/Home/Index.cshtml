@{
    ViewData["Title"] = "Home Page";
}
<html>
<body>
    <div class="text-center">
        <h1 class="display-4" id="display-4" onmouseover="newColor()" onmouseout="oldColor()">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        <iframe width="420" height="315"
                src="https://www.youtube.com/embed/tgbNymZ7vqY">
        </iframe>
    </div>
    <script>
        function newColor() {
            document.getElementById("display-4").style.color="red"
        }
        function oldColor() {
            document.getElementById("display-4").style.color = "Green"
        }
    </script>
</body>
</html>
